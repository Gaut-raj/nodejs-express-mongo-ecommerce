<%- include('../partials/header.ejs') %>

<main>
  <h1>Available Items</h1>

  <% if (message) { %>
    <p><%= message %></p>
  <% } else if (items) { %>
    <div class="items-grid">
      <% items.forEach(item => { %>
        <div class="item">
          <a href="/items/<%= item.id %>">
            <img src="/images/<%= item.image %>" alt="<%= item.title %>">
            <h2><%= item.title %></h2>
            <p>Condition: <%= item.condition %></p>
            <p>$<%= item.price %></p>
          </a>
        </div>
      <% }) %>
    </div>
  <% } %>
</main>

